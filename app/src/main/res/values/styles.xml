<resources>

<!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
    <item name="colorControlNormal">#c5c5c5</item>
    <item name="colorControlActivated">@color/White</item>
    <item name="colorControlHighlight">@color/White</item>
</style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/White</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/White</item>
        <item name="colorControlHighlight">@color/White</item>
        <item name="hintTextAppearance">@color/White</item>
        <item name="errorTextAppearance">@color/White</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
    </style>

<!-- Application theme. -->

<!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <style name="SpinnerTheme"
        parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>




    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>


    </style>

    <style name="MyEditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#dc8f41</item>
        <item name="colorControlNormal">#d11472</item>
    </style>
</resources>
