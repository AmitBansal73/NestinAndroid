<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_card"
    android:elevation="3dp">

    <TextView
        android:id="@+id/vendorCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/vendorCategory"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/vendorName"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/vendorAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vendorName"
        android:layout_alignLeft="@id/vendorName"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        />
    <TextView
        android:id="@+id/cont1"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_below="@id/vendorAddress"
        android:layout_alignLeft="@id/vendorAddress"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/cont2"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_below="@id/cont1"
        android:layout_alignLeft="@id/cont1"
        android:layout_marginTop="5dp"
        />
</android.support.constraint.ConstraintLayout>