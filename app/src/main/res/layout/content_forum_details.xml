<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_inner"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.anvisys.NestIn.Forum.ForumCompActivity"
    tools:showIn="@layout/activity_forum_comp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/viewThread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            >
            <net.anvisys.NestIn.Custom.OvalImageView
                android:id="@+id/imgFirstUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/txtFirstUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMPRAKASH"
                android:textSize="14sp"
                android:textColor="@color/blue"
                app:layout_constraintTop_toTopOf="@id/imgFirstUser"
                app:layout_constraintStart_toEndOf="@id/imgFirstUser"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="13dp"
                android:layout_height="17dp"
                app:layout_constraintBottom_toBottomOf="@id/txtFirstUser"
                app:layout_constraintStart_toEndOf="@id/txtFirstUser"
                android:src="@drawable/icon_home"
                android:layout_marginLeft="2dp"
                />
            <TextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/txtMonth"
                app:layout_constraintEnd_toStartOf="@id/txtMonth"
                android:text="22 "
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/txtMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/txtTime"
                app:layout_constraintEnd_toStartOf="@id/txtTime"
                android:text="Sep"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="11:45 am"
                android:textSize="10sp"
                android:textColor="@color/gray"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtFirstPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtFirstUser"
                app:layout_constraintStart_toStartOf="@id/txtFirstUser"
                android:text="Discription "
                android:textSize="15sp"
                android:paddingRight="5dp"
                android:layout_marginLeft="70dp"
                />
            <TextView
                android:id="@+id/txtComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtFirstPost"
                app:layout_constraintEnd_toEndOf="parent" />
            <ImageView
                android:id="@+id/imgComments"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintBottom_toBottomOf="@id/txtComments"
                app:layout_constraintEnd_toStartOf="@id/txtComments"
                android:src="@drawable/icon_comments"
                android:layout_marginRight="5dp"
                />
        </android.support.constraint.ConstraintLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_below="@id/viewThread"
            android:background="@drawable/background_card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:orientation="vertical"
                android:padding="10dp">

                <ListView
                    android:id="@+id/forumCompList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_card"
                    android:dividerHeight="3dp"
                    >
                </ListView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="   Comments   "
                android:layout_marginLeft="15dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/listPrgBar"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminate="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:id="@+id/viewComment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#99000000"
        android:layout_gravity="bottom"
            >
        <EditText
            android:id="@+id/txtNewComment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_alignLeft="@id/spinnerStatus"
            android:layout_below="@id/spinnerStatus"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            />
        <ImageView
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtNewComment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="SendReply"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_send_24dp" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>