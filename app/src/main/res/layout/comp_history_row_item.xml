<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:layout_marginBottom="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<View
    android:id="@+id/line4"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/line_division"
    android:visibility="gone"
    >

</View>
        <LinearLayout
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/txtDateTime"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/titillium_web"
            android:textColor="#040404"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txtUser"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"


            />
        </LinearLayout>

        <TextView
            android:id="@+id/cStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/line0"
            android:layout_marginTop="5dp"
            android:text="."
            android:fontFamily="@font/titillium_web"
            android:textColor="#040404"
            android:textSize="13sp"
            android:textStyle="normal"
            android:typeface="sans"

            />

        <TextView
            android:id="@+id/cDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cStatus"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/cStatus"
            android:text="..."
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            android:fontFamily="@font/titillium_web"

            />

        <TextView
            android:id="@+id/cSeverity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cDesc"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/cDesc"
            android:text="..."
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            android:fontFamily="@font/titillium_web"

            />

    </RelativeLayout>
</LinearLayout>