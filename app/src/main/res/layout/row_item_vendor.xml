<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_card"
    android:elevation="3dp"
    android:padding="5dp"
    >

    <net.anvisys.NestIn.Custom.OvalImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        />
<TextView
    android:id="@+id/imageText"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="A"
    android:textSize="50sp"
    android:gravity="center"
    android:textColor="@color/white"
    android:background="@drawable/border"
    android:visibility="gone"
    />

    <TextView
        android:id="@+id/vendorName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Gulshan General Store"
        />

    <TextView
        android:id="@+id/vendorAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vendorName"
        app:layout_constraintTop_toBottomOf="@id/vendorName"
        android:layout_marginTop="8dp"
        android:text="X 245, Super Market, Noida"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        />
    <TextView
        android:id="@+id/cont1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/vendorAddress"
        app:layout_constraintTop_toBottomOf="@id/vendorAddress"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="9898989898"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_local_phone_24dp"
        />

    <ImageView
        android:id="@+id/imageCall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cont1"
        android:src="@drawable/cell_phone"

        />

    <TextView
        android:id="@+id/cont2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cont1"
        app:layout_constraintTop_toBottomOf="@id/cont1"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="98989898"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cont2"
        app:layout_constraintTop_toBottomOf="@id/cont2"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="xyz@anvisys.com"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_email_24dp"
        />
    <TextView
        android:id="@+id/txtUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txtEmail"
        app:layout_constraintTop_toBottomOf="@id/txtEmail"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="www.anvisystechnology.com"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_web_24dp"
        />

    <TextView
        android:id="@+id/txtOffer"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_bottom_circular"
        android:text="5% discount on all branded items"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/txtUrl"
        app:layout_constraintTop_toBottomOf="@id/txtUrl"
        />

</android.support.constraint.ConstraintLayout>