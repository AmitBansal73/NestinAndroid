    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/banner_ad"
        android:contentDescription="banner"
        android:scaleType="centerCrop"
        android:visibility="gone"

        />
</LinearLayout>
</LinearLayout>