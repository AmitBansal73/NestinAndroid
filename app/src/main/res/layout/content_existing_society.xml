<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/existingSociety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Society: "
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/selectSociety"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:iconifiedByDefault="false"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtSearchSoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search"
                android:textColor="@color/blue"
                android:layout_gravity="right"
                android:visibility="gone"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/societyList"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:elevation="10dp"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtExistingState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:lines="2"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/txtLocalityCity"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:lines="1"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/txtExistingPincode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:lines="2"
                android:textColor="@color/Black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:text="Flat: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                />
            <android.support.v7.widget.SearchView
                android:id="@+id/searchFlat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
            </android.support.v7.widget.SearchView>
            <EditText
                android:id="@+id/selectFlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:iconifiedByDefault="false"
                android:hint="e.g. X203"
                />
            <ListView
                android:id="@+id/flatList"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtSearchFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/blue"
                android:textSize="16sp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/rowFlatFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtExistingArea"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txtExistingFloor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                />
              </LinearLayout>
        <LinearLayout
            android:id="@+id/rowBlockIntercom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtExistingBlock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txtExistingIntercom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnSubmitRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="submit"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@drawable/background_btn"
            android:visibility="gone"
            />
    </LinearLayout>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>