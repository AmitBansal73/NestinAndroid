<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/existingSociety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Select Society: "
                android:textColor="@color/Black"
                />
            <EditText
                android:id="@+id/selectSociety"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:iconifiedByDefault="false"
                />
            <ListView
                android:id="@+id/societyList"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtSearchSoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search"
                android:textColor="@color/blue"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtLocality"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Locality : "
                android:textColor="@color/Black"
                />
            <TextView
                android:id="@+id/txtCity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="City : "
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtState"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="State : "
                android:textColor="@color/Black"
                />
            <TextView
                android:id="@+id/txtPincode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pincode : "
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Your Flat: "
                android:textColor="@color/Black"
                />
            <android.support.v7.widget.SearchView
                android:id="@+id/searchFlat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
            </android.support.v7.widget.SearchView>
            <EditText
                android:id="@+id/selectFlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:iconifiedByDefault="false"
                />
            <ListView
                android:id="@+id/flatList"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtSearchFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/blue"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/rowFlatFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtArea"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Area : "
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txtFloor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Floor : "
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rowBlockIntercom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/txtBlock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Block : "
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txtIntercom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Intercom : "
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnExistingSociety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="submit"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@drawable/background_btn"
            />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>