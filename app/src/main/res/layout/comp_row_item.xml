<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/box_border"
    android:orientation="vertical"
    android:elevation="5dp"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/compImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/user_image"
        />

    <TextView
        android:id="@+id/complaintDesc"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Need carpenter to make almira and showcase. Please send skilled carpenter."
        android:textColor="#000000"
        android:textSize="16sp"
        android:lines="3"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/complaintType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey_text"
        />
        <TextView
            android:id="@+id/complaintAssigned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Manoj"
            android:textColor="@color/grey_text"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/complaintStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Initiated"
            android:textColor="@color/grey_text"
            android:textStyle="bold"
            />
       <TextView
            android:id="@+id/currentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/grey_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/complaintId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket: 234234"
            />
        <TextView
            android:id="@+id/complaintDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey_text"
            />

    </LinearLayout>
</LinearLayout>