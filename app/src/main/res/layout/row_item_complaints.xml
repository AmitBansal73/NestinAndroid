<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:elevation="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/statusBar"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#0073fa"/>

    <TextView
        android:id="@+id/txtComplaintDate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circular_background"
        android:text="20\nMay"
        app:layout_constraintStart_toEndOf="@id/statusBar"
        app:layout_constraintTop_toTopOf="@id/statusBar"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/txtflat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="flat"
        app:layout_constraintStart_toStartOf="@id/statusBar"
        app:layout_constraintTop_toBottomOf="@id/txtComplaintDate"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        />

    <View
        android:id="@+id/viewLine"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:background="#d8d8d8"
        app:layout_constraintStart_toEndOf="@+id/txtComplaintDate"
        app:layout_constraintTop_toTopOf="@+id/statusBar" />

    <TextView
        android:id="@+id/txtViewComplaintId"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/titillium_web"
        android:text="TicketNo: 123234"
        app:layout_constraintStart_toEndOf="@id/viewLine"
        app:layout_constraintTop_toTopOf="@id/viewLine"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txtCompStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewLine"
        android:textColor="#ffffff"
        android:background="@drawable/background_green"
        android:textStyle="italic"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        />


    <TextView
        android:id="@+id/txtComplaintDesc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/titillium_web"
        android:text="Complaint description"
        app:layout_constraintStart_toEndOf="@id/viewLine"
        app:layout_constraintTop_toBottomOf="@id/txtViewComplaintId"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txtComplaintType"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="@font/titillium_web"
        android:text="Complaint Type"
        app:layout_constraintStart_toEndOf="@id/statusBar"
        app:layout_constraintTop_toBottomOf="@id/txtflat"
        android:background="#cce5cc"
        android:layout_marginLeft="7dp"
        android:textColor="#000000"
        android:elevation="4dp"
        />

    <TextView
        android:id="@+id/txtTypeAssigned"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="@font/titillium_web"
        android:text="bottomText"
        app:layout_constraintTop_toBottomOf="@id/txtComplaintType"
        app:layout_constraintStart_toEndOf="@id/statusBar"
        android:background="#cce5cc"
        android:elevation="4dp"
        android:layout_marginLeft="7dp"
        android:textColor="#000000"
        />

</android.support.constraint.ConstraintLayout>